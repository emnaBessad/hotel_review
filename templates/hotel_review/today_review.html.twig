{% extends 'base.html.twig' %}

{% block title %}Hotel Review {% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
{#    <button class="btn btn-primary">tmlatlma</button>#}
    <div class="container p-5">
        <h3 class="text-center">{{ review.hotel.name }} 's Review of Today âœ… </h3>
        <h6 class="text-center">{{ review.hotel.address }}</h6>
        <div class="card mx-auto mt-5" style="width:400px">
            <div class="card-header text-center">{{review.title}}</div>
            <div class="card-body">
                <h6 class="card-title">Owner : {{review.owner}}</h6>
                <h6>Date of post : {{ review.creationDate |date("m/d/Y h:i:s")}}</h6>
                <p class="card-text">{{review.description}}</p>

            </div>
        </div>
    </div>
{% endblock %}
